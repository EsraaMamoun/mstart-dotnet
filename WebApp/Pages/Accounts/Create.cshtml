@page
@model WebApp.Pages.Accounts.CreateModel
@{
}

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account.User_ID" class="control-label"></label>
                <select asp-for="Account.User_ID" class="form-control">
                    <option value="">Select User Id</option>
                    @foreach (var userId in Model.userIds)
                    {
                        <option value="@userId">@userId</option>
                    }
                </select>
                <span asp-validation-for="Account.User_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Account_Number" class="control-label"></label>
                <input asp-for="Account.Account_Number" class="form-control" />
                <span asp-validation-for="Account.Account_Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Balance" class="control-label"></label>
                <input asp-for="Account.Balance" class="form-control" />
                <span asp-validation-for="Account.Balance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Account.Currency" class="control-label"></label>
                <select asp-for="Account.Currency" class="form-control">
                    <option value="">Select Currency</option>
                    @foreach (var currencyString in Model.allCurrencyStrings)
                    {
                        <option value="@currencyString">@currencyString</option>
                    }
                </select>
                <span asp-validation-for="Account.Currency" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

        @if (Model.ErrorMessage.Length > 0)
        {
            <p style="color:red;">@Model.ErrorMessage</p>
        }
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
